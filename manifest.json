{
  "manifest_version": 2,
  "name": "YouTube Music Autoloop",
  "version": "1.0",

  "description": "Automatically loops YouTube music songs. Credit to Icons8 for the YouTube Music and loop icons.",

  "icons": {
    "48": "icons/ytm48.png",
    "96": "icons/ytm96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["ytmautoloop.js"]
    }
  ],
  "browser_specific_settings": {
      "gecko": {
          "id": "RememberLoopStatus@likeusb.me"
   }
  }
}