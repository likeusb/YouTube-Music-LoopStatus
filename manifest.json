{
    "manifest_version": 2,
    "name": "YouTube Music Autoloop",
    "version": "1.0",
  
    "description": "Automatically loops YouTube music songs.",
  
    "icons": {
      "48": "icons/icons8-youtube-music-48.png",
      "96": "icons/icons8-youtube-music-96.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://music.youtube.com/*"],
        "js": ["ytmautoloop.js"]
      }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "borderify@example.com"
     }
    }

  }
  